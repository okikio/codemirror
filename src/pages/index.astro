---
import Layout from "@/layouts/Layout.astro";
import Editor from '@/components/Editor';
---

<Layout title="Codemirror JSON LSP Test">
  <main>
    <Editor client:only />
  </main>
</Layout>

<style>
  * {
    box-sizing: border-box;
    margin: 0;
  }

  :root {
    font-family:
      -apple-system,
      BlinkMacSystemFont,
      Segoe UI,
      Helvetica,
      Arial,
      sans-serif,
      Apple Color Emoji,
      Segoe UI Emoji;
    font-size: 1rem;
    --user-font-scale: 1rem - 16px;
    font-size: clamp(
      0.875rem,
      0.4626rem + 1.0309vw + var(--user-font-scale),
      1.125rem
    );
  }

  @media (prefers-color-scheme: dark) {
    :root {
      background-color: black;
      color-scheme: dark;
    }
  }

  body {
    padding: min(2rem, 5vmax);
  }

  #editor {
    margin-inline: auto;
    max-width: 75vw;
    width: 100%;
  }
</style>
