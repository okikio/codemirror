---
import Editor from '../components/Editor';
---

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="theme-color" content="#000000" />
  <link rel="icon" type="image/svg+xml" href="/assets/favicon.svg" />

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Codemirror LSPS Test</title>

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Material+Icons&display=block" rel="stylesheet" />
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
    }

    :root {
      font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial,
        sans-serif, Apple Color Emoji, Segoe UI Emoji;
      font-size: 1rem;
      --user-font-scale: 1rem - 16px;
      font-size: clamp(0.875rem,
          0.4626rem + 1.0309vw + var(--user-font-scale),
          1.125rem);
    }

    @media (prefers-color-scheme: dark) {
      :root {
        background-color: black;
        color-scheme: dark;
      }
    }

    body {
      padding: min(2rem, 5vmax);
    }

    #editor {
      margin-inline: auto;
      max-width: 75vw;
      width: 100%;
    }
  </style>
</head>

<body>
  <noscript>You need to enable JavaScript to run this app.</noscript>
  <Editor client:load />

</body>

</html>